<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="100dp"-->
<!--            android:ems="15"-->
<!--            android:textAlignment="center"-->
<!--            android:text="Nếu tiếp tục, bạn đồng ý với Điều khoản Dịch vụ và đã đọc [Chính sách Quyền riêng tư] của chúng tôi (https://www.flickr.com/help/privacy)."-->
<!--            android:textSize="15dp" />-->

