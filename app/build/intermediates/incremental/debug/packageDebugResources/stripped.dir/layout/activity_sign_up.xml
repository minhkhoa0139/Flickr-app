<!--            android:layout_width="4000dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@color/teal_200"-->
<!--            android:text="Đã là thành viên Flickr? Đăng nhập"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="15dp" />-->

    </LinearLayout>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="735dp"
        android:ems="15"
        android:textAlignment="center"
        android:text="By continuing, you to our Terms of Service and have read our Privacy Policy"
        android:textSize="15dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="4000dp"
        android:layout_height="100dp"
        android:background="@color/teal_200"
        android:text="Already a Flickr member? Log in"
        android:textColor="@color/black"
        android:layout_marginTop="800dp"
        android:textSize="15dp" />

</RelativeLayout>